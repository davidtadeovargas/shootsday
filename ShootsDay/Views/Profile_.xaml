<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShootsDay.Views.Profile_"
             BackgroundColor="White">
    <ContentPage.Content>
        <ScrollView BackgroundColor="White">
            <StackLayout Orientation="Vertical" Spacing="5" Padding="10">
                <BoxView HeightRequest="10" />
                <Image HorizontalOptions="Center"
		               WidthRequest="300"
		               Source="logo.png"
                       Margin="10"/>
                <BoxView HeightRequest="10" />
                <Image HorizontalOptions="Center"
		               WidthRequest="300"
                       Source="default_profile.png"
                       x:Name="profile_img"/>
                <BoxView HeightRequest="10" />
                <BoxView HeightRequest="10" />
                <Label x:Name="name" HorizontalOptions="CenterAndExpand"/>
                <Label x:Name="event_" HorizontalOptions="CenterAndExpand"/>
                <Label x:Name="contacts" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
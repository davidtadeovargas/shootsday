<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShootsDay.Views.Home_"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="logo.png" Margin="35" />
            <Label Text="¿QUE QUIERES HACER?" HorizontalOptions="CenterAndExpand"/>
            <StackLayout VerticalOptions="CenterAndExpand">
                <Image Source="sesionfotos.jpg" Margin="5">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                    Tapped="OnSesionFotosClicked"
                    NumberOfTapsRequired="1" />
                    </Image.GestureRecognizers>
                </Image>
                <Image Source="redsocial.png" Margin="5">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                        Tapped="OnRedSocialClicked"
                        NumberOfTapsRequired="1" />
                    </Image.GestureRecognizers>
                </Image>
                <Image Source="invitacion.jpg" Margin="5">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                        Tapped="OnInvitacionClicked"
                        NumberOfTapsRequired="1" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
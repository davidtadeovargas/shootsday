<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="White" xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="ShootsDay.Photoshoots">
  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Share" Name="Shared" Order="Secondary" Command="{Binding Share}" Icon="icon.png" />
  </ContentPage.ToolbarItems>
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button x:Name="btnPrevius" Image="left.png" Clicked="Previous_Clicked"
			AbsoluteLayout.LayoutBounds="0.05, 0.05, 100, 100" AbsoluteLayout.LayoutFlags="PositionProportional" />
            <Button x:Name="btnNext" Image="right.png" Clicked="Next_Clicked"
			AbsoluteLayout.LayoutBounds="0.95, 0.05, 100, 100" AbsoluteLayout.LayoutFlags="PositionProportional" />
        </StackLayout>
        <Image x:Name="image_photoshoot"
			AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" />
    </StackLayout>

</ContentPage>
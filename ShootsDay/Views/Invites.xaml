<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ShootsDay.Invites">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="NameToolb" Text="Invitacion al Evento" Order="Primary" Priority="1"  />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical" Spacing="15" Padding="20">
                <Image Source="http://shootsday.com.mx/imgs/logo.png" Scale="0.6"/>
                <Label Text="INVITACION" FontSize="Large" HorizontalOptions="CenterAndExpand"/>
                <Label x:Name="address" HorizontalOptions="CenterAndExpand"/>
                <Label x:Name="addressSecond" HorizontalOptions="CenterAndExpand" FontSize="Small"/>
                <Image x:Name="mapPicture" HorizontalOptions="CenterAndExpand" Aspect="AspectFit" Margin="0">
                </Image>
                <ImageButton Source="http://shootsday.com.mx/imgs/vermapa.png" Command="{Binding KeyboardClickCommand}" HorizontalOptions="CenterAndExpand" Margin="0" Clicked="OnVerMapaClicked">
                </ImageButton>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
